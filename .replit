modules = ["nodejs-20", "python-3.11", "postgresql-16"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinanFun Unified Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinanFun API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "FinanFun Website"

[[workflows.workflow]]
name = "FinanFun Unified Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node app.js"
waitForPort = 5000

[[workflows.workflow]]
name = "FinanFun API"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node simple-server.js"
waitForPort = 8080

[[workflows.workflow]]
name = "FinanFun Website"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 -m http.server 5000"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "python3 -m http.server 5000"]

